#include <iostream>
using namespace std;

class xyz
{
    int a,b;
public:
    void read();
    void disp();
    xyz operator++();
    xyz operator++(int x);
};

void xyz::read()
{
    cout<<"Enter any two numbers"<<endl;
    cin>>a>>b;
}

void xyz::disp()
{
    cout<<a<<" "<<b<<endl;
}

xyz xyz::operator++()
{
    xyz temp;
    temp.a = ++a;
    temp.b = ++b;
    return temp;
}

xyz xyz::operator++(int x)
{
    xyz temp;
    temp.a = a++;
    temp.b = b++;
    return temp;
}

int main()
{
    xyz ob1,ob2;
    ob1.read();
    ++ob1;
    ob1.disp();
    ob2.read();
    ob2++;
    ob2.disp();
    return 0;
}
